<header class="bg-dark" style="padding: 10px 20px; display: flex; justify-content: space-between; align-items: center;">
  <!-- ロゴのセクション -->
  <div id="logo">
    <%= link_to root_path do %>
     <%= image_tag '8th_SunGallary_logo', class: "img-fluid custom-logo-size", alt: "Responsive image" %>
      <% end %>
  </div>

  <!-- ナビゲーションリンクのセクション -->
  <div id="navbar">
    <ul style="list-style: none; display: flex; margin: 0; padding: 0;">
      <li style="margin-left: 20px;"><%= link_to "Search", "#", style: "color: white; text-decoration: none;" %></li>
      <li style="margin-left: 20px;"><%= link_to "Login", "#", style: "color: white; text-decoration: none;" %></li>
      <li style="margin-left: 20px;"><%= link_to "Sign Up", "#", style: "color:white; text-decoration: none;" %></li>
    </ul>
  </div>
</header>
