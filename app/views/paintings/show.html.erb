<div class="container mt-4">
  <!-- 作品名と作者名のセクション -->
  <div class="row">
    <div class="col-md-12 text-center">
      <div class="row">
        <div class="col-md-6 text-left">
          <h2>作品名:<%= @painting.name %></h2>
        </div>
        <div class="col-md-6 text-left">
          <h2>作者名:<%= @painting.author.name %></h2>
        </div>
      </div>
    </div>
  </div>
  <!-- 画像のセクション -->
  <div class="row">
    <div class="col-md-12 text-center">
      <% if @painting.images.attached? %>
        <%= image_tag @painting.images.first, class: "img-fluid img-limited", alt: @painting.name %>
      <% else %>
        <%= image_tag '8th_SunGallary_logo.png', class: "img-fluid img-limited", alt: "Default Image" %>
      <% end %>
    </div>
  </div>
  <!-- ダウンロードボタンのセクション -->
  <div class="row">
    <div class="d-flex justify-content-center align-items-center">
      <div class="mt-3">
        <% if @painting.images.attached? %>
          <%= link_to '印刷', print_images_painting_path(@painting), class: 'btn btn-primary', target: '_blank', rel: 'noopener noreferrer' %>
        <% else %>
          <p>画像がありません。</p>
        <% end %>
        <br>
        <br>
        <%= link_to '戻る', request.referrer, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
